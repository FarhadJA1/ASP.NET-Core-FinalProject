@model Testimonial
@{
    ViewData["Title"] = "Update Testimonial";
}

<div class="container">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1>Update Testimonial</h1>
                <div>

                    <img style="width:100px;height:100px" src="~/assets/img/testimonial/@Model.Image" alt="Alternate Text" />
                </div>

                <form class="forms-sample mt-5" method="post" asp-action="Update" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>

                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>

                        <label asp-for="Profession"></label>
                        <input class="form-control" asp-for="Profession">
                        <span class="text-danger" asp-validation-for="Profession"></span>

                        <label asp-for="Description"></label>
                        <input class="form-control" asp-for="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary me-2">Update</button>
                    <button class="btn btn-light">
                        <a asp-action="Index">Cancel</a>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


