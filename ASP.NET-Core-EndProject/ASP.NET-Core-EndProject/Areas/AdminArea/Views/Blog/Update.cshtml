@model Blog
@{
    ViewData["Title"] = "Update Blog";
}

<div class="container">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div>
                    <img style="width:150px;height:150px" src="~/assets/img/blog/@Model.Image" alt="Alternate Text" />
                </div>
                <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>

                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>

                        <label asp-for="From"></label>
                        <input class="form-control" asp-for="From">
                        <span class="text-danger" asp-validation-for="From"></span>

                        <label asp-for="Date"></label>
                        <input class="form-control" asp-for="Date">
                        <span class="text-danger" asp-validation-for="Date"></span>

                        <label asp-for="Description"></label>
                        <input class="form-control" asp-for="Description">
                        <span class="text-danger" asp-validation-for="Description"></span>


                        <label asp-for="CommentCount"></label>
                        <input class="form-control" asp-for="CommentCount">
                        <span class="text-danger" asp-validation-for="CommentCount"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary me-2">Submit</button>
                    <button class="btn btn-light">
                        <a asp-action="Index">Cancel</a>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


