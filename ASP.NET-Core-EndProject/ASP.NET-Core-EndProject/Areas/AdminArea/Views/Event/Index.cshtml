@model List<Event>
@{
    ViewData["Title"] = "Events";
    int count = 1;

}
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Events</h2>
        <a class="btn btn-success" asp-action="Create">Create Event</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var events in Model)
                {
                    <tr>
                        <td>

                            @count
                        </td>
                        <td>
                            <img src="~/assets/img/event/@events.Image" style="width:100px;height:100px" alt="Alternate Text" />

                        </td>
                        <td>
                            @events.Title

                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@events.Id">Edit</a>

                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@events.Id">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@events.Id">Detail</a>
                        </td>

                    </tr>

                    count++;
                }

            </tbody>
        </table>
    </div>
</div>





