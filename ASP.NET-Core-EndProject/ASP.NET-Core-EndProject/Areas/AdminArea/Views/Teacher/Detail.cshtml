@model Teacher
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1 class="text-warning">Teacher details</h1>
    <hr />
    <img src="~/assets/img/teacher/@Model.Image" alt="Alternate Text" style="width:350px;height:350px;border-radius:50%" />
    <hr />
    <h3 style="font-weight:bolder">Teacher Details</h3>
    <hr />
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">Fullname: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.Fullname</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Profession: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.Profession</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">About: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.About</span> </h3>
    <hr />
    <h3 style="font-weight:bolder">Teacher Contacts</h3>
    <hr />
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Mail: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.TeacherContacts.Mail</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">Phone: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.TeacherContacts.Phone</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Skype Address: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.TeacherContacts.SkypeAddress</span> </h3>
    <hr />
    <h3 style="font-weight:bolder">Other</h3>
    <hr />
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Assesment: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.TeacherDetails.Degree</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">Class Duration: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.TeacherDetails.Experience</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Duration: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.TeacherDetails.Faculty</span> </h3>
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">Language: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.TeacherDetails.Hobbies</span> </h3>
    <hr />
    <h3 style="font-weight:bolder">Skills</h3>
    <hr />
    @foreach (var teacherSkill in Model.TeacherSkills)
    {
        <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">@teacherSkill.Skills.Name: <span style="color: grey; font-size: 20px; font-weight: lighter">@teacherSkill.Percent%</span> </h3>
    }
    <a asp-action="Index" class="btn btn-outline-warning mt-3">Go back</a>

</div>




